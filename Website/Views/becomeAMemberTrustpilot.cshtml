    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>*@

<script>
    const swiper1 = new Swiper('.swiper1', {
        // Optional parameters
        direction: 'horizontal',
        slidesPerView: 4,
        loop: true,
        autoplay: true,
        navigation: {
            nextEl: '.bmtp-arrow-next1',
            prevEl: '.bmtp-arrow-prev1',
        },
        pagination: {
            el: '.swiper-pagination',
            clickable: true,
        },

        breakpoints: {
            300: {
                slidesPerView: 1,
                spaceBetween: 10,
            },
            750: {
                slidesPerView: 1,
                spaceBetween: 10,
                //navigation: {
                //    nextEl: '',
                //    prevEl: '',
                //},
            },
            1000: {
                slidesPerView: 1,
                spaceBetween: 10,
            },
            1200: {
                slidesPerView: 3,
                spaceBetween: 30,
            },

            1400: {
                slidesPerView: 4,
                spaceBetween: 30,
            },
        }
    });
</script>

<script>
    var elem1 = document.getElementById("bmtp-arrow-left");
    var elem2 = document.getElementById("bmtp-arrow-right");
    let pagi = document.querySelector(".swiper-pagination")
    if (window.innerWidth < 1350) {

        elem1.parentNode.removeChild(elem1);
        elem2.parentNode.removeChild(elem2);

    }
    if (window.innerWidth >= 1350) {

        pagi.parentNode.removeChild(pagi);
    }
</script>
