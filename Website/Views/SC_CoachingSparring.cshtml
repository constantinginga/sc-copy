@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
	Layout = "SC_WebBase.cshtml";
}

@* the fun starts here *@


<header id="sc-header" class="sc-cover sc-cover-sm" role="banner">
    <div class="overlay">
        <div class="sc-container">
            @{ Html.RenderAction("RenderTitleControls", "SiteLayout");}
        </div>
    </div>
</header>

<div class="sc-spitz--white">
    <div class="sc-section sc-container sc-spitz">
        <div class="row ">
            <div class="col-md-2">
            @{
                var typedMediaPickerSection1 = Model.Content.GetPropertyValue<IPublishedContent>("section1Img");
                if (typedMediaPickerSection1 != null)
             {
               <img src="@typedMediaPickerSection1.Url" alt="@typedMediaPickerSection1.GetPropertyValue("alt")" />
             }
            }
            </div>
            <div class="col-md-10">
@Umbraco.AssignedContentItem.GetPropertyValue("Section1")
            </div>
        </div>
    </div>
</div>

