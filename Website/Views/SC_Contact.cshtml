@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using StartupCentral.Code.Class

@{
    Layout = "Master.cshtml";
    int i = 0;
}

@if (IsPost)
{
    if (Request.Form["formaction"] == "sendContact")
    {
        i = 1;

        string contactFirstName = Request["contactFirstName"];
        string contactLastName = Request["contactLastName"];
        string contactEmail = Request["contactEmail"];
        string contactSubject = Request["contactSubject"];
        string message = Request["message"];
        Emailing.SendContactEmail(email: contactEmail,
            firstName: contactFirstName,
            lastName: contactLastName,
            message: message,
            subject: contactSubject);
    }
}

<div class="content-header">
    <div class="row-container centered">
        <div class="row">
            <div class="column-container">
                <div class="column centered">
                    @if (i == 0)
                    {
                        <h2 class="headline-1">
                            @Model.Value("title")
                        </h2>
                        <p class="lead">
                            @Model.Value("subtitle")
                            <br />
                            @Model.Value("subtitle2")
                        </p>
                    }
                    else
                    {
                        <h2 class="headline-1">
                            @Model.Value("sentHeadline")
                        </h2>
                        <p class="lead">
                            @Model.Value("sentLead")
                        </p>
                    }

                </div>
            </div>
        </div>
    </div>
    <img class="content-header__image" src="/media/2375/header400px.svg" alt="StartupCentralHeader">
</div>

