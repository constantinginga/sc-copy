@inherits Umbraco.Web.Mvc.UmbracoViewPage

<section class="bmtp-reviews-section">
    <div class="bmtp-reviews-title bmtp-reviews-title-coach"><p style="font-family: 'Open Sans', sans-serif;"><b>Som medlem får du gratis sparring med alle vores coaches</b></p></div>
    <div class="bmtp-reviews-section-container">
        <div class="swiper swiper3" style="height: auto">
            <div class="swiper-wrapper">

                @for (var i = 0; i < 4; i++) //4 on local, 8 on production
                {
                    var coachPicture = Umbraco.AssignedContentItem.Value<IPublishedContent>($"bmcbImg{i + 1}");

                    <div class="bmtp-review-card-container swiper-slide">
                        <div class="bmcb-coach-card">
                            <div class="bmcb-coach-card-top">
                            <div class="bmtp-coach-image">
                                <img src="@coachPicture.Url" />
                            </div>
                            <div class="bmcb-coach-name">
                                <p>@Umbraco.AssignedContentItem.Value($"bmcbName{i + 1}")</p>
                            </div>
                            </div>
                            <div class="bmcb-coach-description">
                                <p>@Umbraco.AssignedContentItem.Value($"bmcbSpeciality{i + 1}")</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="bmtp-arrow-prev3 swiper-button-prev" id="bmtp-arrow-left3" style="display: flex; top: 60%"></div>
        <div class="bmtp-arrow-next3 swiper-button-next" id="bmtp-arrow-right3" style="display: flex; top: 60%"></div>
    <div class="swiper-pagination" id="bmtp-pagination3"></div>
    </div>
</section>


