<script>
    const swiper3 = new Swiper('.swiper3', {
        // Optional parameters
        direction: 'horizontal',
        slidesPerView: 4,
        loop: true,
        autoplay: true,
        navigation: {
            nextEl: '.bmtp-arrow-next3',
            prevEl: '.bmtp-arrow-prev3',
        },
        pagination: {
            el: '#bmtp-pagination3',
            clickable: true,
        },
        
        breakpoints: {
            300: {
                slidesPerView: 1,
                spaceBetween: 10,
            },
            750: {
                slidesPerView: 1,
                spaceBetween: 10,
                //navigation: {
                //    nextEl: '',
                //    prevEl: '',
                //},
            },
            1000: {
                slidesPerView: 1,
                spaceBetween: 10,
            },
            1200: {
                slidesPerView: 3,
                spaceBetween: 30,
            },

            1400: {
                slidesPerView: 4,
                spaceBetween: 30,
            },
        }
    });
</script>

<script>
    var elem5 = document.getElementById("bmtp-arrow-left3");
    var elem6 = document.getElementById("bmtp-arrow-right3");
    let pagi3 = document.querySelector("#bmtp-pagination3")
    if (window.innerWidth < 1350) {

        elem5.parentNode.removeChild(elem5);
        elem6.parentNode.removeChild(elem6);

    }
    if (window.innerWidth >= 1350) {

        pagi3.parentNode.removeChild(pagi3);
    }
</script>