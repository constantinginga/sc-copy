/*
* ==========================================
* BUTTON HOVER EFFECTS
* ==========================================
*/
.example_f {
    border-radius: 10px;
    border: 1px solid rgb(15, 35, 90);
    /* border: none; */
    color: rgb(15, 35, 90);
    text-align: center;
    text-transform: uppercase;
    padding: 5px;
    width: 210px;
    transition: 0.5s;
    cursor: pointer;
}

.example_f span {
    cursor: pointer;
    display: inline-block;
    position: relative;
    transition: 0.4s;
}

.example_f span:after {
    content: '\2193';
    position: absolute;
    opacity: 0;
    top: 0;
    right: -20px;

}

.example_f:hover span {
    padding-right: 25px;
    color: rgb(15, 35, 90);

}

.example_f:hover span:after {
    transition: 0.5s;
    opacity: 1;
    right: 0;
}

.job-description {
    border-radius: 0%;

}

.card-item:nth-child(even) {
    border-top: none;
    border-bottom: none;
}

.card-item:nth-child(1) {
